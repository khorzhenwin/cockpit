# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://cockpit_user:password@localhost:5432/cockpit
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cockpit
DATABASE_USER=cockpit_user
DATABASE_PASSWORD=your_secure_password
DATABASE_SSL=false
DATABASE_POOL_SIZE=10

# Security Configuration (Generate secure random strings for production)
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_encryption_key_at_least_32_characters_long
SESSION_SECRET=your_session_secret_key_at_least_32_characters_long

# MCP Configuration
MCP_SERVER_URL=http://localhost:8000
MCP_API_KEY=your_mcp_api_key
MCP_TIMEOUT=30000

# External API Keys (Optional)
FINANCIAL_API_KEY=your_financial_api_key
CALENDAR_API_KEY=your_calendar_api_key
HEALTH_API_KEY=your_health_api_key

# Logging and Monitoring
LOG_LEVEL=info
ENABLE_METRICS=false
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Data Retention
DATA_RETENTION_DAYS=365
CLEANUP_INTERVAL_HOURS=24